---
const {
  size = "md",
  style = "primary",
  block,
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  md: "px-5 py-2.5",
  lg: "px-10 py-4",
};

const styles = {
  outline: "border border-white text-white rounded-xl",
  primary: "bg-mingo-green text-white rounded-xl border ra border-mingo-lime",
  white: "bg-white text-mingo-mint-dark rounded-xl"
};
---

<button
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</button>
