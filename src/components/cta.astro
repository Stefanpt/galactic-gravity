---
import Link from "./ui/link.astro";
import { Picture } from "astro:assets";
import birdWire from "assets/bird-wire.png"
import phones from "assets/phones.png"
import Button from "@components/ui/button.astro";

---

<div
  class="bg-mingo-mint mt-20 mx-12 rounded-lg flex flex-col items-center text-center">

  <Picture
    src={birdWire}
    alt="Astronaut in the air"
    loading="lazy"
    format="avif"
    class="w-dvw"
  />

  <div class="flex">

    <!-- col 1 -->
    <div class="flex flex-col w-1/2 p-20 pe-52 md:pe-0 md:p-14 text-left gap-6">
      <h2 class="font-extrabold text-4xl">
        Download the App and Start Trading on Hedera!
      </h2>
      <p>
        Seamlessly buy, trade, and invest in digital assets, all powered by the innovative Hedera network.
      </p>
      <Button
        style="white"
        size="lg"
        class="flex gap-1 items-center justify-center w-1/2"
      >
        Download Our App
      </Button>
    </div>

    <!-- col 2 -->
    <div class="flex flex-col w-1/2 px-20 justify-end">
      <Picture
        src={phones}
        alt="Astronaut in the air"
        loading="lazy"
        format="avif"
      />
    </div>

  </div>

</div>
