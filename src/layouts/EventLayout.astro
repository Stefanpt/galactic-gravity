---
import Container from "@components/container.astro";
import Picture from "astro/components/Picture.astro";
import { getFormattedDate } from "@utils/all";
import Layout from "./Layout.astro";

const { event } = Astro.props;
console.log(event['data'])
---

<Layout title={event.data.title}>
  <div class="mx-auto max-w-[735px] p-10">
    <div class="mx-auto mt-14">
      <Picture
        class="w-full object-cover object-center bg-white"
        src={event.data.image.src}
        alt="Astronaut in the air"
        widths={[200, 400, 600]}
        sizes="(max-width: 800px) 100vw, 620px"
        inferSize={true}
        loading="eager"
        format="avif"
      />
      <h1
      class="text-white text-4xl lg:text-5xl font-bold lg:tracking-tight mt-8 lg:leading-tight">
      {event.data.title}
    </h1>
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <span class="text-gray-400">
          {event.data.location}
        </span>
        <span class="text-gray-400">•</span>
        <time class="text-gray-400" datetime={event.data.date}>
          {getFormattedDate(event.data.date)}
        </time>
        <span class="text-gray-400 hidden md:block">•</span>
      </div>
    </div>

    <div class="mx-auto prose prose-lg text-mingo-text mt-6">
      <slot />
    </div>
    <div class="text-center mt-8">
      <a
        href="/"
        class="bg-mingo-green border-mingo-lime border text-white block md:w-1/3 py-4 rounded-xl hover:bg-gray-200 transition"
        >← Back</a
      >
    </div>
  </div>
</Layout>
